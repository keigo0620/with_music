<table class="table">
  <% music.music_comments.each do |music_comment|%>
<tr>
  <td>
    <%= link_to attachment_image_tag(music_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"), user_path(music_comment.user) %>
    <%= music_comment.user.name %>
  </td>
  <td>
    <%= music_comment.comment %>
  </td>

  <td>
    <% if music_comment.user_id == current_user.id %>
    <%= link_to "Delete", music_music_comment_path(music_comment.music.id,music_comment.id), method: :delete, class: "btn-sm btn-danger" %>
    <br>
    <% end %>
  </td>
</tr>
 <% end %>

 </table>