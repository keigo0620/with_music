<% if current_user.favorites.find_by(music_id: music.id) %>
  <%= link_to music_favorites_path(music), method: :delete, remote: true do %>
    <i class="glyphicon glyphicon-heart"></i>
  <% end %>
<% else %>
  <%= link_to music_favorites_path(music), method: :post, remote: true do %>
    <i class="glyphicon glyphicon-heart-empty"></i>
  <% end %>
<% end %>
<%= music.favorites.count %>
