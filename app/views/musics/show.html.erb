<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
<div class="row">
<div class="col-xs-3">
			<%#= render 'users/list', book: @new_book, user: @user %>
<div class="col-xs-9">
			<h2>Music detail</h2>
			<table class="table table-striped">
				<tbody>
					<tr>
						<td>
            <%= link_to user_path(@user.id) do %>
              <%#= attachment_image_tag @user, :profile_image_id,  fallback: "no_image.jpg", size: "60x60" %>
              <%= @user.name %>
            <% end %>
					<td><%=  @music.title  %></td>
					<td><%= @music.body %></td>
					<% if @music.user_id == current_user.id %>
					   <td> <%= link_to "Edit", edit_music_path(@music.id) ,class:"btn-sm btn-success edit_book_10349" %></td>
					    <td><%= link_to "Destroy", music_path(@music.id), method: :delete,  "data-confirm" => "本当に削除しますか？"  ,class:"btn-sm btn-danger destroy_book_10349"%></td>
				    <% end %>
					</tr>
				</tbody>
			</table>
			<!--以下コメント機能実装-->
			<%= form_for [@music, @music_comment] do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.text_area :music_id, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
    </div>
  </div>
  <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
  <%#= render 'book_comments/comments', book: @book %>
<% end %>
</div>
</div>
</div>
</div>
