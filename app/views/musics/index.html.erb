<div class="container">
  <div class="row">
    <% if @music.errors.any? %>
      <%= @music.errors.count %>件のerrorが発生しました
      <% @music.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
   </div>
  <div class="row">
  <div class="col-xs-3">
    <%= render 'users/sidebar' ,user: @user,music:@music %>
    </div>
    <div class="col-xs-9">
      <h2>List of Posts</h2>
      <nav class="text-muted"><span><strong><%= form_tag(musics_path,:method => 'get' ) do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'Search', :name => nil %></strong></span>
      </nav>
      <%= link_to "+NEW POST", new_music_path, class: "btn btn-primary btn-circle pull-right" %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>image</th>
            <th>artist</th>
            <th></th>
            <th>title</th>
            <th></th>
            <th>genre</th>
            <th>location</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @musics.each do |music| %>
          <tr>
            <td><%= attachment_image_tag @music, :post_image, fallback: "no_image.jpg", size: "60x60" %></td>
          <td><%= music.artist %></td>
          <%= link_to music_path(music.id) do %>
              <td>
                <% end %>
              </td>
              <td>
                <%= link_to music.title, music_path(music.id) %>
              </td>
              <td></td>
              <td><%= music.genre.category %></td>
              <td><%#= music.location.seen %>
              <!--以下いいね機能の実装-->
              <% if music.favorited_by?(current_user) %>
              <td>
                <%= link_to music_favorites_path(music), method: :delete, remote: true do %>
              <td>
                 <%= render 'favorites/favorite_button', music: music %>
              </td>
              <%#= link_to music_favorites_path(music), method: :delete do %>
                <%#i class="fa fa-heart" aria-hidden="true"></i>
              <%#= music.favorites.count %>
              <% end %>
            </td>
            <% else %>
            <td>
                <%= link_to music_favorites_path(music), method: :post do %>
                <i class="fa fa-heart-o" aria-hidden="true"></i>
                <%= music.favorites.count %>
                <% end %>
            </td>
            <% end %>

            <td>
              <!--以下コメント機能の実装-->
            <%= link_to "#{music.music_comments.count} comment", music_path(music.id) %>
            </td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>