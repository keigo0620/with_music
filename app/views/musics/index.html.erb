<div class="container">
  <div class="row">
    <% if @music.errors.any? %>
      <%= @music.errors.count %>件のerrorが発生しました
      <% @music.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
   </div>
  <div class="row">
  <div class="col-xs-3">
    <%#= attachment_image_tag music.user, :profile_image_id, fallback: "no_image.jpg", size: "60x60" %>
    <%#= render 'users/list' ,book: @book %>
    </div>
    <div class="col-xs-9">
      <h2>List of Posts</h2>
      <%= link_to "+", new_music_path, class: "btn btn-primary btn-circle pull-right" %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>name</th>
            <th>title</th>
            <th>genre</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @musics.each do |music| %>
          <%= link_to user_path(music.user.id) do %>
            <tr>
              <td>
                <%#= attachment_image_tag music.user, :profile_image_id, fallback: "no_image.jpg", size: "60x60" %>
                <% end %>
              </td>
              <td>
                <%= link_to music.title, music_path(music.id) %>
              </td>
              <td><%= music.body %></td>
              <td><%= music.genre %></td>
              <!--以下いいね機能の実装-->
              <% if music.favorited_by?(current_user) %>
              <td>
              <%= link_to music_favorites_path(music), method: :delete do %>
                <i class="fa fa-heart" aria-hidden="true"></i>
              <%= music.favorites.count %>
              <% end %>
            </td>
            <% else %>
            <td>
                <%= link_to music_favorites_path(music), method: :post do %>
                <i class="fa fa-heart-o" aria-hidden="true"></i>
                <%= music.favorites.count %>
                <% end %>
            </td>
            <% end %>

            <td>
              <!--以下コメント機能の実装-->
            <%= link_to "#{music.music_comment.count} comment", music_path(music.id) %>
            </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>