<div class="body-height">
<div class="container">
	<h1>New Post</h1>

	<%= form_for @music, :url => {controller:  :musics, action: :create} do |f| %>
	<%= f.attachment_field :post_image_id %>
      <h3>Artist<%= f.text_field :artist %></h3>
      <h3>title<%= f.text_field :title %></h3>
      <h3>説明<%#= f.text_area :description %></h3>
      <h3>genre<%= f.select :genre_id, ['洋楽', '邦楽', 'HOUSE Music', 'アニソン','ヒーリングミュージック'], {include_blank: '---'} %></h3>
      <h3>シーン</h3>
        <%#= f.collection_select :genre, Genre.all, :id, :category %></h3>
      <%= f.submit '新規登録', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
