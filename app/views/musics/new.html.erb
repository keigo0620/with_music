<div class="body-height">
<div class="container">
	<h1>New Post</h1>

	<%= form_for @music, :url => {controller:  :musics, action: :create} do |f| %>
	<%= f.attachment_field :post_image %>
      <h3>Artist<%= f.text_field :artist %></h3>
      <h3>title<%= f.text_field :title %></h3>
      <h3>point<%= f.text_area :impression %></h3>
      <h3>genre<%= f.collection_select :genre_id, Genre.all,:id,:category %></h3>
      <h3>location<%= f.collection_select :location_id, Location.all,:id,:seen %></h3>

      <%= f.submit '新規登録', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
