<!DOCTYPE html>
<html>
  <head>
    <title>WithMusic</title>
    <script src="https://kit.fontawesome.com/82d88901b5.js" crossorigin="anonymous"></script>
    <!-- <script
  src="https://code.jquery.com/jquery-.3.1.1min.js"
  integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
  crossorigin="anonymous"></script> -->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
<header class="navbar navbar-inverse navbar-bottom">
  <div class="container">

<nav class="nav navbar-nav navbar-left">
    <nav class="text-muted"><span><strong><%= link_to "with music" , users_path %></strong></span></nav>
</nav>
<nav>
  <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
    <li><%= link_to user_path(current_user.id) do %>
      <p><i class="fas fa-home"></i>Home</p>
      <% end %>
      </li>
      <li><%= link_to users_path  do %>
      <p><i class="fas fa-user"></i>マイページ</p>
      <% end %>
      </li>


      <li><%= link_to musics_path do %>
      <p><i class="fas fa-music"></i>投稿</p>
      <% end %>
      </li>

      <li><%= link_to destroy_user_session_path, method: :delete do %>
      <p><i class="fas fa-sign-out-alt"></i>ログアウト</p>
      <% end %>
      </li>

      <% else %>

      <li><%= link_to root_path do %>
      <p><i class="fas fa-home"></i>Home</p>
      <% end %>
      </li>

      <li><%= link_to home_about_path do %>
      <p><i class="fas fa-question-circle"></i>with musicとは？</p>
      <% end %>
      </li>

      <li><%= link_to new_user_registration_path do %>
      <p><i class="fas fa-user-plus"></i>新規登録</p>
      <% end %>
      </li>

      <li><%= link_to new_user_session_path do %>
      <p><i class="fas fa-sign-in-alt"></i>ログイン</p>
      <% end %>
    </li>
    <%# end %>
    <% end %>
  </ul>
</nav>
</div>
</div>
</header>
<%= yield %>
<div class="footer">
  <div class='container'>
      <div class='row'>
               <div class="nav navbar-nav navbar-right">
               <a href="https://www.apple.com/jp/apple-music/"><i class="fab fa-apple fa-3x"></i></a>
               <a href="https://www.youtube.com/"><i class="fab fa-youtube fa-3x"></i></a>
               <a href="https://www.amazon.co.jp/music/unlimited/ref=dmm_acq_marin_d_bra_zzz_5tXCd5hO-dc_c_423719225969/"><i class="fab fa-amazon fa-3x"></i></a>
               <a href="https://www.spotify.com/jp/"><i class="fab fa-spotify fa-3x"></i></a>
        </div>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
