<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>
<h2>User info</h2>
<a><%#= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "60x60" %></a>
<table class="table">
  <tbody>
    <tr>
        <th>user name</th>
        <th><%= @user.name %></th>
    </tr>
    <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th><%=link_to @user.followings.count, follows_user_path(@user.id) %></th>
    </tr>

    <tr>
      <th>followers</th>
      <th><%=link_to @user.followers.count, followers_user_path(@user.id) %></th>
    </tr>
    <tr>
    <%= link_to '', edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
    </tr>
    </tbody>
</table>

    <h2>New Posts</h2>
    <%= form_for (music) do |f| %>

    <div class="field row">
    <h4>Title</h4>
    <%= f.text_field :title, class: "col-xs-12 book_title"%>
  </div>

    <div class="field row">
    <h4>Opinion</h4>

    <%= f.text_area :body, class: "col-xs-12 book_body" %>
  </div>
  <div class="actions row">
   <%= f.submit 'New Posts',class: "btn btn-primary col-xs-12"%>
  </div>
   <% end %>