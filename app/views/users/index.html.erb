<body>
<div class="container">
    <div class="row">
    <div class="col-xs-3">
      <%= render 'users/sidebar' ,user: @user,music:@music %>
    </div>
    <div class="col-xs-9">
          <h2>マイページ</h2>
          <table class="table table-striped">
            <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Follows</th>
              <th>Followers</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                  <td>
                    <a><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "60x60" %></a><!--イメージ画像のコード-->
                  </td>
                  <td><%= user.name %></td>
                  <td><p><%= user.followings.count %></p></td><!--フォロー数のカウント下記も同じ-->
                  <td><p><%= user.followers.count %></p></td>

                  <% if current_user != user %>
                  <!--ログイン済みのユーザーである場合-->
                  <% if user.followed_by?(current_user) %><!-- ログイン済みのユーザーがフォロー-->
                  <td><%=link_to "フォロー解除", user_relationships_path(user.id), method: :delete %></td>
              <% else %>
                  <td><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
              <% end %>
              <% end %>
                  <td><%= link_to "Show", user_path(user.id) %></td><!--show画面への遷移-->
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
