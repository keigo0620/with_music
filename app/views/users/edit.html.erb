<div class="useredit">
<div class="body-height">
<div class="field">
<h1>登録情報編集</h1>

   <%= form_for(@user) do |f| %>
   <% if @user.errors.any? %>
  <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
  <ul><% @user.errors.full_messages.each do |messages| %></ul>
    <li><%= messages %></li>
  <% end %>
  <% end %>
  <div class="field">
   <h3>名前</h3>
    <%= f.text_field :name%>
  </div>
