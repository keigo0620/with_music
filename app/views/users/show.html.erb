<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
    <table class="table">
    <tbody>
    <tr>
        <th>User Name</th>
        <th><%= @user.name %></th>
        <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
    </tr>
    <tr>
      <th>
        <p>follows</p>
     <th><%=link_to @user.followings.count, follows_user_path(@user.id) %><th>
    </tr>

    <tr>
      <th>followers</th>
      <th><%=link_to @user.followers.count, followers_user_path(@user.id) %></th>
      <tr>
    <%= link_to '', edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
    </tr>
     <% if current_user != @user %>
                  <!--ログイン済みのユーザーである場合-->
     <% if @user.followed_by?(current_user) %>
     <td><%=link_to "フォロー解除", user_relationships_path(@user.id), method: :delete %></td>
              <% else %>
     <td><%=link_to "フォローする", user_relationships_path(@user.id), method: :post %></td>
     <% end %>
     <% end %>
  </tbody>
</table>
   </div>
    <div class="col-xs-9">
      <h3>マイページ</h3>
      <%= link_to "+NEW POST", new_music_path, class: "btn btn-primary btn-circle pull-right" %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Image</th>
          <th>アーティスト</th>
          <th>タイトル</th>
          <th>ジャンル</th>
          <th>おすすめシーン</th>
          <th>一言</th>
        </tr>
        </thead>
        <tbody>
        <% @musics.each do |music| %>
          <tr>
            <td>
              <%= link_to  user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %>
              <% end %>
            </td>
            <td><%= music.artist %></td>
            <td>
              <%= link_to music.title, music_path(music) %>
            </td>
            <td><%= music.genre.category %></td>
            <td><%= music.location.seen %>
            <td><%= music.impression %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
