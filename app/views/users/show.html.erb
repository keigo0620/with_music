<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
    <table class="table">
    <tbody>
    <tr>
        <th>User Name</th>
        <th><%= @user.name %></th>
        <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
    </tr>
    <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
    </tr>
    <tr>
      <th>
        <p>follows</p>
     <th><%=link_to @user.followings.count, follows_user_path(@user.id) %><th>
    </tr>

    <tr>
      <th>followers</th>
      <th><%=link_to @user.followers.count, followers_user_path(@user.id) %></th>
    </tr>
     <% if current_user != @user %>
                  <!--ログイン済みのユーザーである場合-->
     <% if @user.followed_by?(current_user) %>
     <td><%=link_to "フォロー解除", user_relationships_path(@user.id), method: :delete %></td>
              <% else %>
     <td><%=link_to "フォローする", user_relationships_path(@user.id), method: :post %></td>
     <% end %>
     <% end %>
  </tbody>
</table>


    <h2>New Posts</h2>
    <%= form_for (@music) do |f| %>


    <div class="field row">
    <h4>Title</h4>
    <%= f.text_field :title, class: "col-xs-12 book_title"%>
  </div>

    <div class="field row">
    <h4>Opinion</h4>

    <%= f.text_area :body, class: "col-xs-12 book_body" %>
  </div>
  <div class="actions row">
   <%= f.submit 'Create Book',class: "btn btn-primary col-xs-12"%>
  </div>
   <% end %>
   </div>
    <div class="col-xs-9">
      <h3>Musics</h3>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>image</th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @musics.each do |music| %>
          <tr>
            <td>
              <%= link_to  user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %>
              <% end %>
            </td>
            <td>
              <%= link_to music.title, music_path(music) %>
            </td>
            <td>
              <%= music.body %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
