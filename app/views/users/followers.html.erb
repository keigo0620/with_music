<h1>Followers Users</h1>
<table class="table">
    <thead>
        <tr>
          <th>画像</th>
          <th>名前</th>
          <th colspan="3"></th>
        </tr>
    </thead>
  <tbody>
<% @users.each do |user| %>
        <tr>
            <td><a><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "60x60" %></a></td>
            <td><%= user.name %></td>
            <td><p>フォロー数：<%= user.followings.count %></p></td><!--フォロー数のカウント下記も同じ-->
            <td><p>フォロワー数：<%= user.followers.count %></p></td>
            <td><%= link_to "Show", user_path(user.id) %></td><!--show画面への遷移-->
<% end %>
  </tbody>
</table>